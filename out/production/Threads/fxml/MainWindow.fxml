<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.ScrollPane?>
<BorderPane fx:id="borderBase" fx:controller="com.edenrump.MainWindowController"
            stylesheets="/css/Global.css"
            xmlns:fx="http://javafx.com/fxml" prefHeight="600" prefWidth="1200">
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <StackPane>
                <HBox fx:id="preparationContainer" style="-fx-opacity: 0" alignment="CENTER" spacing="50"/>
                <AnchorPane fx:id="displayOverlay" mouseTransparent="true"/>
            </StackPane>
        </ScrollPane>
    </center>
</BorderPane>